version: '3'
services:
  minio:
    image: minio/minio:{{ minio_version }}
    restart: always
    container_name: minio
    ports:
      - 9000:9000
      - 9001:9001
    volumes:
        - "{{ service_dest }}/data:/data"
    command: server /data --console-address ":9001"
    environment:
        MINIO_ACCESS_KEY: {{ MINIO_ACCESS_KEY }}
        MINIO_SECRET_KEY: {{ MINIO_SECRET_KEY }}