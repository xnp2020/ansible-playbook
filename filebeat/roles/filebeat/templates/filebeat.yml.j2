filebeat.inputs:
- type: log
  enabled: true
  paths:
    - /home/log/*/log.log
  multiline.pattern: '^20'
  multiline.negate: true
  multiline.match: after
  fields:
    env: {{ deploy_env }}
    host.name: {{ inventory_hostname }}
  fields_under_root: true

{% if deploy_env == "prd"  %}
- type: log                        
  enabled: true                    
  paths:
    - /home/log/*/error-log.log
  multiline.pattern: '^20'                                   
  multiline.negate: true                                        
  multiline.match: after                                
  fields:
    env: {{ deploy_env }}
    label: "error"
    host.name: {{ inventory_hostname }}
  fields_under_root: true
{% endif %}

